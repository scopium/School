
STEP 1:

CREATE TABLE S_DEPT
(	DEPTNO	number(2)	not null,
DNAME	varchar2(14),
LOC	char(13),	
CONSTRAINT SDEPT_DEPTNO_PK PRIMARY KEY (DEPTNO)
) TABLESPACE USERS01;

CREATE TABLE S_EMP
(	EMPNO	number(4)	not null,
	ENAME	varchar2(10),
	JOB		varchar2(9),
	MGR		varchar2(9),
	HIREDATE	date,
	SALE	number(7,2),
	COMM	number(7,2),
	DEPTNO	number(2),
	CONSTRAINT SEMP_EMPNO_PK PRIMARY KEY (EMPNO),
	CONSTRAINT DEPTNO_EMPNO_FK FOREIGN KEY (DEPTNO) REFERENCES S_DEPT(DEPTNO)
)TABLESPACE USERS01;

Select TABLE_NAME, TABLESPACE_NAME FROM DBA_TABLES WHERE TABLE_NAME IN('S_DEPT','S_EMP');

INSERT INTO S_DEPT VALUES (12,'IT','LOS ANGELES');
INSERT INTO S_EMP VALUES (1234,'SHAHIN','SALES','JASON',TO_DATE('12-03-2011', 'DD-MM-YYYY'),12345.45,3456.78,12);
INSERT INTO S_EMP VALUES (234,'JAMES','SALES','MIKE',TO_DATE('12-03-2010', 'DD-MM-YYYY'),12345.45,3456.78,11);

STEP 2:

SELECT TABLE_NAME, INITIAL_EXTENT, NEXT_EXTENT, MAX_EXTENTS, PCT_INCREASE
FROM DBA_TABLES WHERE TABLE_NAME IN ('S_EMP','S_DEPT');

SELECT TABLESPACE_NAME, INITIAL_EXTENT, NEXT_EXTENT,MAX_EXTENTS,PCT_INCREASE
FROM DBA_TABLESPACES WHERE TABLESPACE_NAME = 'USERS01';


STEP3:

CREATE TABLE S_ITEM
(	ITEMNO	NUMBER(2) NOT NULL,
	DESCRIPTION VARCHAR2(20),
	PRICE	NUMBER(7,2),
	CONSTRAINT SITEM_ITEMNO_PK PRIMARY KEY (ITEMNO)
	) TABLESPACE USERS01
	STORAGE(
	INITIAL 512K
	NEXT 512K
	PCTINCREASE 0
	MAXEXTENTS 100);

SELECT TABLE_NAME, INITIAL_EXTENT, NEXT_EXTENT,MAX_EXTENTS,PCT_INCREASE
FROM DBA_TABLES WHERE TABLE_NAME IN ('S_EMP','S_DEPT','S_ITEM');

STEP 4:

INSERT INTO S_DEPT VALUES (10,'ACCOUNTING','NEW YORK');
INSERT INTO S_DEPT VALUES (20,'RESEARCH','DALLAS');
INSERT INTO S_DEPT VALUES (30,'SALES','CHICAGO');
INSERT INTO S_DEPT VALUES (40,'OPERATIONS','BOSTON');

CREATE TABLE G_DEPT AS SELECT * FROM S_DEPT;

SELECT TABLE_NAME, INITIAL_EXTENT, NEXT_EXTENT,MAX_EXTENTS,PCT_INCREASE
FROM DBA_TABLES WHERE TABLE_NAME IN ('S_EMP','S_DEPT','S_ITEM','G_DEPT');

STEP 5:
ALTER TABLE S_DEPT 
ADD (LOCATION_PIC	BLOB);

STEP6:
ALTER TABLE S_DEPT
RENAME COLUMN LOC TO LOCATION;

ALTER TABLE S_DEPT
MODIFY( LOCATION VARCHAR2(30));

STEP 7:
CREATE BITMAP INDEX LOC_BM_IDX ON S_DEPT(LOCATION);
DESC S_DEPT;

select INDEX_NAME,TABLE_NAME from DBA_INDEXES where table_name='S_DEPT';
